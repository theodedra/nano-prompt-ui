{
  "manifest_version": 3,
  "name": "Nano Prompt UI",
  "version": "0.2.1",
  "description": "Popup UI for Chrome's on-device Prompt API (Gemini Nano).",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "scripting",
    "activeTab",
    "tabs",
    "clipboardWrite",
    "geolocation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}