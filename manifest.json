{
  "manifest_version": 3,
  "name": "Nano Prompt UI",
  "version": "1.0.0",
  "description": "Side Panel UI for Chrome's on-device Prompt API (Gemini Nano).",
  "permissions": [
    "sidePanel",
    "storage",
    "unlimitedStorage",
    "scripting",
    "activeTab",
    "tabs",
    "clipboardWrite",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Nano Prompt"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/pdf.min.js", "lib/pdf.worker.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}