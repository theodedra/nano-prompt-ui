{
  "manifest_version": 3,
  "name": "Nano Prompt UI",
  "version": "0.1.6",
  "description": "Popup UI for Chrome's on-device Prompt API (Gemini Nano).",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "optional_permissions": [
    "geolocation"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
